<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ViewSettingsDialog
        id="SortDialog"
        confirm="onConfirmSortDialog"
        title="물품 요청 정렬">
    <sortItems>
        <ViewSettingsItem text="요청 번호" key="request_number" selected="true"/>
        <ViewSettingsItem text="요청 물품" key="request_product" selected="true"/>
        <ViewSettingsItem text="물품 개수" key="request_quantity" selected="true"/>
        <ViewSettingsItem text="요청자" key="requestor" selected="true"/>
        <ViewSettingsItem text="요청 일자" key="request_date" selected="true"/>
        <ViewSettingsItem text="처리 상태" key="request_state" selected="true"/>
    </sortItems>
</ViewSettingsDialog>
</core:FragmentDefinition>
